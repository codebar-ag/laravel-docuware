{
    "name": "codebar-ag/laravel-docuware",
    "description": "DocuWare integration with Laravel",
    "keywords": [
        "laravel",
        "docuware",
        "codebar-ag",
        "laravel-docuware",
        "codebar Solutions AG",
        "Ricoh Schweiz AG"
    ],
    "homepage": "https://github.com/codebar-ag/laravel-docuware",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Fix",
            "email": "sebastian.fix@codebar.ch",
            "homepage": "https://www.codebar.ch",
            "role": "Sofware-Engineer"
        },
        {
            "name": "Ruslan Steiger",
            "role": "Software-Developer"

        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.13.0",
        "illuminate/contracts": "^9.0"
    },
    "require-dev": {
        "brianium/paratest": "^6.6",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "pestphp/pest-plugin-parallel": "^1.2",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "CodebarAg\\DocuWare\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodebarAg\\DocuWare\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true

        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "CodebarAg\\DocuWare\\DocuWareServiceProvider"
            ],
            "aliases": {
                "DocuWare": "CodebarAg\\DocuWare\\Facades\\DocuWare"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
